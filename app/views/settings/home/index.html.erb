<div class="container">
  <div class="padding">
    <div class="breadcrumb">
      <div class="breadcrumb__item breadcrumb__item--active">
        <%= t 'common.settings' %>
      </div>
    </div>
  </div>
</div>

<div class="container container--small">
  <div class="list">
    <a href="<%= settings_email_path(@account) %>" class="list__item">
      <div class="list__icon">
        <span class="material-icons">email</span>
      </div>
      <div class="list__content">
        <div class="text-primary">
          <%= t '.email' %>
        </div>
        <div class="text-secondary">
          <%= t '.email_desription' %>
        </div>
      </div>
    </a>
    <a href="<%= settings_password_path(@account) %>" class="list__item">
      <div class="list__icon">
        <span class="material-icons">password</span>
      </div>
      <div class="list__content">
        <div class="text-primary">
          <%= t '.password' %>
        </div>
        <div class="text-secondary">
          <%= t '.password_desription' %>
        </div>
      </div>
    </a>
  </div>
</div>
