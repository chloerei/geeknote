<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <label for="drawer" class="btn btn-square btn-ghost lg:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu-icon lucide-menu"><path d="M4 5h16"/><path d="M4 12h16"/><path d="M4 19h16"/></svg>
    </label>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t "general.settings" %>
    </div>
  </div>
</div>

<div class="layout-main-sidebar">
  <div>
    <div class="card card-default">
      <div class="card-body">
        <div class="list">
          <a href="<%= settings_email_path %>" class="list-row hover:bg-base-200">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail-icon lucide-mail"><path d="m22 7-8.991 5.727a2 2 0 0 1-2.009 0L2 7"/><rect x="2" y="4" width="20" height="16" rx="2"/></svg>
            </div>
            <div>
              <div class="font-medium">
                <%= t "general.email" %>
              </div>
              <div class="text-sm text-base-content/80">
                <%= t ".email_description" %>
              </div>
            </div>
          </a>

          <a href="<%= settings_password_path %>" class="list-row hover:bg-base-200">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-key-round-icon lucide-key-round"><path d="M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z"/><circle cx="16.5" cy="7.5" r=".5" fill="currentColor"/></svg>
            </div>
            <div>
              <div class="font-medium">
                <%= t "general.password" %>
              </div>
              <div class="text-sm text-base-content/80">
                <%= t ".password_description" %>
              </div>
            </div>
          </a>

          <a href="<%= settings_notification_path %>" class="list-row hover:bg-base-200">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-bell-icon lucide-bell"><path d="M10.268 21a2 2 0 0 0 3.464 0"/><path d="M3.262 15.326A1 1 0 0 0 4 17h16a1 1 0 0 0 .74-1.673C19.41 13.956 18 12.499 18 8A6 6 0 0 0 6 8c0 4.499-1.411 5.956-2.738 7.326"/></svg>
            </div>
            <div>
              <div class="font-medium">
                <%= t "general.notification" %>
              </div>
              <div class="text-sm text-base-content/80">
                <%= t ".notification_description" %>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
