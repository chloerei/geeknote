<div class="container">
  <div class="layout">
    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="breadcrumb">
          <div class="breadcrumb__item">
            <a href="<%= settings_root_path %>">
              <%= t 'common.settings' %>
            </a>
          </div>
          <div class="breadcrumb__item breadcrumb__item--active">
            <%= t 'common.email' %>
          </div>
        </div>
      </div>

      <% if !@user.email_verified? %>
        <div class="card card--surface padding-3 margin-bottom-3">
          <h3 class="subtitle-5 margin-top-0">
            <%= t '.verify_email_title' %>
          </h3>
          <p>
            <%= t '.verify_email_description' %>
          </p>
          <%= form_with url: resend_settings_email_path do |form| %>
          <button type="submit" class="button button--outlined">
            <%= t '.resend_verification_email' %>
          </button>
          <% end %>
        </div>
      <% end %>

      <div class="card card--surface padding-3">
        <%= render 'form' %>
      </div>
    </div>
  </div>
</div>
