<%# locals: (url:, icon:, label:, active: false) %>

<a href="<%= url %>" class="navigation-bar__item <%= "navigation-bar__item--active" if active %>">
  <div class="navigation-bar__item__icon">
    <%= material_icon(active ? "#{icon}-fill" : icon) %>
  </div>
  <div class="navigation-bar__item__label">
    <%= label %>
  </div>
</a>
