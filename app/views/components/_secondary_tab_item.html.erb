<%# locals: (icon: nil, label: nil, tag: :a, options: {}, active: false) %>

<%= content_tag tag, options.merge(class: "flex-grow flex items-center justify-center gap-2 h-12 px-4 relative cursor-pointer select-none interactive-bg-surface select-none") do %>
  <% if icon %>
    <div class="icon w-6 h-6">
      <%= material_icon icon %>
    </div>
  <% end %>
  <% if label %>
    <div class="text-sm font-medium">
      <%= label %>
    </div>
  <% end %>
  <% if active %>
    <div class="absolute left-0 right-0 bottom-0 h-[2px] bg-primary"></div>
  <% end %>
<% end %>
