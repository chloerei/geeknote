<%# locals: (pagy:) %>

<nav class="flex justify-end gap-1">
  <%# Previous page link %>
  <% if pagy.prev %>
    <a href="<%= pagy_url_for(pagy, pagy.prev) %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-left-icon lucide-chevron-left"><path d="m15 18-6-6 6-6"/></svg>
    </a>
  <% else %>
    <span class="btn btn-ghost btn-square btn-disabled">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-left-icon lucide-chevron-left"><path d="m15 18-6-6 6-6"/></svg>
    </span>
  <% end %>
  <%# Page links (series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36]) %>
  <% pagy.series.each do |item| %>
    <% if item.is_a?(Integer) %>
      <a href="<%= pagy_url_for(pagy, item) %>" class="btn btn-ghost btn-square">
        <%= item %>
      </a>
    <% elsif item.is_a?(String) %>
      <a href="<%= pagy_url_for(pagy, item) %>" class="btn btn-ghost btn-square btn-active">
        <%= item %>
      </a>
    <% elsif item == :gap %>
      <span class="btn btn-ghost btn-square btn-disabled">
        &hellip;
      </span>
    <% end %>
  <% end %>
  <%# Next page link %>
  <% if pagy.next %>
    <a href="<%= pagy_url_for(pagy, pagy.next) %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right-icon lucide-chevron-right"><path d="m9 18 6-6-6-6"/></svg>
    </a>
  <% else %>
    <span class="btn btn-ghost btn-square btn-disabled">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-chevron-right-icon lucide-chevron-right"><path d="m9 18 6-6-6-6"/></svg>
    </span>
  <% end %>
</nav>
