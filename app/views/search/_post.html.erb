<a href="<%= account_post_path(post.account.name, post) %>" class="block card hover:interactive-bg-surface-container-lowest p-4 mt-4 first:mt-0">
  <div class="flex items-center gap-2">
    <img src="<%= avatar_url(post.user) %>" alt="avatar" class="w-6 h-6 rounded-full">
    <div class="font-medium">
      <%= post.user.name %>
    </div>
    <div class="text-on-surface-variant">
      <%= format_time post.published_at %>
    </div>
  </div>
  <div class="search-result mt-2 text-lg font-medium">
    <%= sanitize post.formatted["title"] %>
  </div>
  <div class="search-result mt-2 line-clamp-3 text-sm text-on-surface-variant">
    <%= sanitize post.formatted["content"] %>
  </div>
</a>
