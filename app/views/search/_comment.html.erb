<a href="<%= account_comment_path(comment.user.account.name, comment) %>" class="card card-default p-4">
  <div class="flex items-center gap-2">
    <img src="<%= avatar_url(comment.user) %>" alt="avatar" class="w-6 h-6 rounded-full">
    <div class="font-medium">
      <%= comment.user.name %>
    </div>
    <div class="text-on-surface-variant">
      <%= format_time comment.created_at %>
    </div>
  </div>
  <div class="search-result mt-2 font-medium">
    <%= t "general.comment_on" %>
    <% if comment.commentable %>
      <%= comment.commentable.title %>
    <% else %>
      <span class="text-base-content/80 italic">
        <%= t "general.deleted_item" %>
      </span>
    <% end %>
  </div>
  <div class="search-result mt-2 line-clamp-3 text-sm text-on-surface-variant">
    <%= sanitize comment.formatted["content"] %>
  </div>
</a>
