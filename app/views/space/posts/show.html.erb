<div class="post-container">
  <div class="post">
    <h1 class="post__title"><%= @post.title %></h1>
    <div class="post__info">
      <div class="post__info__avatar">
        <a href="<%= space_post_path(@post.author.space) %>">
          <%= image_tag asset_pack_path('media/images/avatar.png') %>
        </a>
      </div>
      <div class="post__info__content">
        <div class="post__info__author-name">
          <a href="<%= space_post_path(@post.author.space) %>">
            <%= @post.author.name %>
          </a>
        </div>
        <div class="post__info__time">
          <%= l @post.created_at, format: :short %>
        </div>
      </div>
    </div>
    <div class="post__content">
      <%= markdown_render @post.content %>
    </div>
  </div>
</div>
