<%= form_with url: sessions_path, builder: CustomFormBuilder, html: { class: 'form', id: 'sign-in-form' } do |form| %>
  <div class="form__field">
    <%= form.text_field :email %>
  </div>
  <div class="form__field">
    <%= form.password_field :password %>
  </div>
  <% if @sign_in_error %>
    <div class="form__field form__field--invalid">
      <div class="form__message">
        Account or password is incorrect.
      </div>
    </div>
  <% end %>
  <%= form.submit 'Sign in', class: 'button button--contained button--primary button--full-width' %>
<% end %>
