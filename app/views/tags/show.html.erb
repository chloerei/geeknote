<div class="container">
  <div class="layout">
    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="headline-medium">
          #<%= params[:id] %>
        </div>
      </div>

      <div class="display-flex flex-direction-column gap-3">
        <%= render partial: 'account/posts/post', collection: @posts, cached: true %>
      </div>

      <%= paginate @posts %>
    </div>
  </div>

</div>
