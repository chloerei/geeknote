<div class="container padding-3">
  <div class="layout-primary">
    <%= render 'admin/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface">
        <div class="top-app-bar">
          <div class="top-app-bar__action">
            <a href="<%= admin_organizations_path %>" class="button button--icon">
              <span class="material-icons">arrow_back</span>
            </a>
          </div>
          <div class="top-app-bar__title">
            <%= t 'common.organizations' %> #<%= @organization.id %>
          </div>
          <div class="top-app-bar__action">
            <a href="<%= edit_admin_organization_path(@organization) %>" class="button button--text">
              <%= t 'common.edit' %>
            </a>
          </div>
        </div>

        <table class="table border-top">
          <tr>
            <th>
              <%= t 'common.account' %>
            </th>
            <td>
              <a href="<%= admin_account_path(@organization.account.id) %>">
                <%= admin_account_path(@organization.account.id) %>
              </a>
            </td>
          </tr>

          <% @organization.attributes.except('password_digest', 'auth_token').each do |name, value| %>
            <tr>
              <th>
                <%= name %>
              </th>
              <td class="text-break-all">
                <%= value %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

      <div class="card card--surface">
        <div class="title-medium padding-3">
          <%= t 'common.members' %>
        </div>
        <table class="table border-top">
          <% @organization.members.each do |member| %>
            <tr>
              <td>
                <% if member.user %>
                  <a href="<%= edit_admin_user_path(member.user) %>">
                    <%= member.user.name %>
                  </a>
                <% else %>
                  <%= member.invitation_email %>
                <% end %>
              </td>
              <td>
                <%= member.role %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
