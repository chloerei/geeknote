<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="breadcrumb">
          <div class="breadcrumb__item">
            <a href="<%= admin_organizations_path %>">
              <%= t 'common.organizations' %>
            </a>
          </div>
          <div class="breadcrumb__item breadcrumb__item--active">
            <%= @organization.id %>
          </div>
        </div>
      </div>

      <div class="card card--surface margin-bottom-3">
        <div class="title-medium padding-3">
          <%= t 'common.attributes' %>
        </div>

        <table class="table border-top">
          <tr>
            <th>
              <%= t 'common.account' %>
            </th>
            <td>
              <a href="<%= admin_account_path(@organization.account.id) %>">
                <%= admin_account_path(@organization.account.id) %>
              </a>
            </td>
          </tr>

          <% @organization.attributes.except('password_digest', 'auth_token').each do |name, value| %>
            <tr>
              <th>
                <%= name %>
              </th>
              <td class="text-break-all">
                <%= value %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>

      <div class="card card--surface">
        <div class="title-medium padding-3">
          <%= t 'common.members' %>
        </div>
        <table class="table border-top">
          <% @organization.members.each do |member| %>
            <tr>
              <td>
                <% if member.user %>
                  <a href="<%= edit_admin_user_path(member.user) %>">
                    <%= member.user.name %>
                  </a>
                <% else %>
                  <%= member.invitation_email %>
                <% end %>
              </td>
              <td>
                <%= member.role %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>

    <div class="sidebar">
      <div class="card card--surface padding-3">
        <div class="">
          <a href="<%= edit_admin_organization_path(@organization) %>" class="button button--outlined">
            <%= t 'common.edit' %>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
