<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="breadcrumb">
          <div class="breadcrumb__item">
            <a href="<%= admin_organizations_path %>">
              <%= t 'common.organizations' %>
            </a>
          </div>
          <div class="breadcrumb__item breadcrumb__item--active">
            <%= @organization.id %>
          </div>
        </div>
      </div>

      <div class="card card--surface padding-3 margin-bottom-3">
        <%= form_with model: @organization, url: admin_organization_path(@organization), builder: CustomFormBuilder do |form| %>
          <div class="margin-bottom-3">
            <%= form.text_field :name %>
          </div>

          <div class="margin-bottom-3">
            <%= form.text_area :description %>
          </div>

          <button type="submit" class="button button--filled">
            <%= t 'common.save_changes' %>
          </button>
        <% end %>
      </div>

      <div class="card card--surface padding-3">
        <div class="title-medium">
          <%= t 'common.members' %>
        </div>
        <% @organization.members.each do |member| %>
          <div class="display-flex gap-3 padding-y-3 border-bottom">
            <div class="flex-grow-1">
              <% if member.user %>
                <a href="<%= edit_admin_user_path(member.user) %>">
                  <%= member.user.name %>
                </a>
              <% else %>
                <%= member.invitation_email %>
              <% end %>
            </div>
            <div class="">
              <%= member.role %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <div class="sidebar">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="title-medium margin-bottom-3">
          <%= t 'common.meta' %>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.created_at' %>
          </div>
          <div>
            <%= @organization.created_at %>
          </div>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.updated_at' %>
          </div>
          <div>
            <%= @organization.updated_at %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
