<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface">
        <div class="headline-small padding-3">
          <%= t 'common.organizations' %>
        </div>

        <table class="table border-top border-bottom">
          <tbody>
            <% @organizations.each do |organization| %>
              <tr>
                <td>
                  <a href="<%= admin_organization_path(organization) %>">
                    <%= organization.name %>
                  </a>
                </td>
                <td>
                  <%= format_time organization.created_at %>
                </td>
              </tr>
            <% end %>
        </table>


        <div class="padding-3">
          <%= paginate @organizations %>
        </div>
      </div>
    </div>
  </div>
</div>
