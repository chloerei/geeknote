<div class="main-content__header">
  <h1 class="main-content__page-title">
    <%= t("administrate.email_tests.send_test_email") %>
  </h1>
</div>

<div class="main-content__body">
  <%= form_with url: [namespace, :email_tests], scope: :email_test, class: "form" do |f| %>
    <div class="field-unit">
      <div class="field-unit__label">
        <%= f.label :email %>
      </div>
      <div class="field-unit__field">
        <%= f.text_field :email, value: params.dig(:email_test, :email) || Current.user.email %>
      </div>
    </div>

    <div class="form-actions">
      <%= f.submit "Send Email" %>
    </div>
  <% end %>
</div>
