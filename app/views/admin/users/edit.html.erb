
<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= admin_user_path(@user) %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t 'general.edit_user' %> #<%= @user.id %>
    </div>
  </div>
</div>


<div class="card card-default">
  <div class="card-body">
    <%= form_with model: @user, url: admin_user_path(@user) do |form| %>
      <%= render "components/text_field", form: form, name: :name %>
      <%= render "components/text_field", form: form, name: :email %>
      <%= render "components/text_field", form: form, name: :bio, type: :text_area %>
      <%= render "components/checkbox_field", form: form, name: :email_notification_enabled %>
      <%= render "components/checkbox_field", form: form, name: :weekly_digest_email_enabled %>
      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <%= t 'general.save_changes' %>
        </button>
      </div>
    <% end %>
  </div>
</div>
