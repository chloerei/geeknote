<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="breadcrumb">
          <div class="breadcrumb__item">
            <a href="<%= admin_users_path %>">
              <%= t 'common.users' %>
            </a>
          </div>
          <div class="breadcrumb__item breadcrumb__item--active">
            <%= @user.id %>
          </div>
        </div>
      </div>

      <div class="card card--surface padding-3">
        <%= form_with model: @user, url: admin_user_path(@user), builder: CustomFormBuilder do |form| %>
          <div class="margin-bottom-3">
            <%= form.text_field :name %>
          </div>

          <div class="margin-bottom-3">
            <%= form.text_field :email %>
          </div>

          <div class="margin-bottom-3">
            <%= form.text_area :bio %>
          </div>

          <div class="margin-bottom-3">
            <label class="display-flex align-items-center gap-3">
              <%= form.check_box :email_notification_enabled %>
              <%= User.human_attribute_name :email_notification_enabled %>
            </label>
            <label class="display-flex align-items-center gap-3">
              <%= form.check_box :comment_email_notification_enabled %>
              <%= User.human_attribute_name :comment_email_notification_enabled %>
            </label>
            <label class="display-flex align-items-center gap-3">
              <%= form.check_box :weekly_digest_email_enabled %>
              <%= User.human_attribute_name :weekly_digest_email_enabled %>
            </label>
          </div>

          <button type="submit" class="button button--filled">
            <%= t 'common.save_changes' %>
          </button>
        <% end %>
      </div>
    </div>

    <div class="sidebar">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="title-medium margin-bottom-3">
          <%= t 'common.meta' %>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.account' %>
          </div>
          <div>
            <a href="<%= edit_admin_account_path(@user.account.id) %>">
              <%= @user.account.name %>
            </a>
          </div>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.created_at' %>
          </div>
          <div>
            <%= @user.created_at %>
          </div>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.updated_at' %>
          </div>
          <div>
            <%= @user.updated_at %>
          </div>
        </div>

        <div class="margin-bottom-2">
          <div class="label-large margin-bottom-1">
            <%= t 'common.email_verified_at' %>
          </div>
          <div>
            <%= @user.email_verified_at || 'None' %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
