<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface">
        <div class="headline-small padding-3">
          <%= t 'common.accounts' %>
        </div>

        <table class="table border-top border-bottom">
          <tbody>
            <% @accounts.each do |account| %>
              <tr>
                <td>
                  <a href="<%= admin_account_path(account.id) %>">
                    <%= account.name %>
                  </a>
                </td>
                <td>
                  <%= account.owner_type %>
                </td>
                <td>
                  <%= format_time account.created_at %>
                </td>
              </tr>
            <% end %>
          </tbody>

        </table>

        <div class="padding-3">
          <%= paginate @accounts %>
        </div>
      </div>
    </div>

    <div class="sidebar">
      <div class="card card--surface padding-3">
        <%= form_with method: :get, builder: CustomFormBuilder do |form| %>
          <div class="margin-bottom-3">
            <%= form.text_field :name, value: params[:name] %>
          </div>

          <button type="submit" class="button button--filled">
            <%= t 'common.filter' %>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>
