<div class="container padding-3">
  <div class="layout-primary">
    <%= render 'admin/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface">
        <div class="top-app-bar">
          <div class="top-app-bar__action">
            <a href="<%= admin_account_path(@account.id) %>" class="button button--icon">
              <span class="material-icons">arrow_back</span>
            </a>
          </div>
          <div class="top-app-bar__title">
            <%= t 'common.edit_account' %> #<%= @account.id %>
          </div>
        </div>

        <div class="padding-3">
          <%= form_with model: @account, url: admin_account_path(@account.id), builder: CustomFormBuilder do |form| %>
            <div class="margin-bottom-3">
              <%= form.text_field :name %>
            </div>

            <div class="margin-bottom-3">
              <%= form.text_field :feed_url %>
            </div>

            <div class="margin-bottom-3">
              <label class="display-flex align-items-center gap-3">
                <%= form.check_box :feed_mark_canonical %>
                <%= Account.human_attribute_name :feed_mark_canonical %>
              </label>
            </div>

            <button type="submit" class="button button--filled">
              <%= t 'common.save_changes' %>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
