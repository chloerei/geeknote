<div class="container padding-3">
  <div class="layout-primary">
    <%= render 'admin/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface margin-bottom-3">
        <div class="top-app-bar">
          <div class="top-app-bar__action">
            <a href="<%= admin_collection_path(@collection) %>" class="button button--icon">
              <span class="material-icons">arrow_back</span>
            </a>
          </div>
          <div class="top-app-bar__title">
            <%= t 'common.edit_collection' %>
          </div>
        </div>

        <div class="padding-3">
          <%= form_with model: @collection, url: admin_collection_path(@collection), builder: CustomFormBuilder do |form| %>
            <div class="margin-bottom-3">
              <%= form.text_field :name %>
            </div>

            <div class="margin-bottom-3">
              <%= form.text_area :description %>
            </div>

            <button type="submit" class="button button--filled">
              <%= t 'common.save_changes' %>
            </button>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
