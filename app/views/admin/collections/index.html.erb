<div class="container padding-3">
  <div class="layout-primary">
    <%= render 'admin/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface">
        <div class="top-app-bar">
          <div class="top-app-bar__title">
            <%= t 'common.collections' %>
          </div>
        </div>

        <table class="table border-top border-bottom">
          <tbody>
            <% @collections.each do |collection| %>
              <tr>
                <td>
                  <a href="<%= admin_collection_path(collection) %>">
                    <%= collection.name %>
                  </a>
                </td>
                <td>
                  <%= collection.account.name %>
                </td>
                <td>
                  <%= format_time collection.created_at %>
                </td>
              </tr>
            <% end %>
        </table>

        <div class="padding-3">
          <%= paginate @collections %>
        </div>
      </div>
    </div>
  </div>
</div>
