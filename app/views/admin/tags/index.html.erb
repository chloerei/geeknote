<div class="container padding-3">
  <div class="layout-primary">
    <%= render 'admin/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface">
        <div class="top-app-bar">
          <div class="top-app-bar__title">
            <%= t 'common.tags' %>
          </div>
            <%= form_with url: admin_tags_path, method: :get, builder: CustomFormBuilder do |form| %>
              <%= form.text_field :name, value: params[:name] %>
            <% end %>
        </div>

        <table class="table border-top border-bottom">
          <tbody>
            <% @tags.each do |tag| %>
              <tr>
                <td>
                  <a href="<%= admin_tag_path(tag) %>">
                    <%= tag.name %>
                  </a>
                </td>
                <td>
                  <%= tag.taggings_count %>
                </td>
                <td>
                  <%= format_time tag.created_at %>
                </td>
              </tr>
            <% end %>
        </table>

        <div class="padding-3">
          <%= paginate @tags %>
        </div>
      </div>
    </div>

  </div>
</div>
