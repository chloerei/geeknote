
<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= admin_tag_path(@tag) %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t 'general.merge_tags' %>
    </div>
  </div>
</div>


<div class="card card-default">
  <div class="card-body">
    <%= form_with url: admin_tag_merge_path do |form| %>
      <div class="mb-4">
        <%= t '.merge_to', name: @tag.name %>
      </div>
      <div class="mb-4">
        <div data-controller="tag-field">
          <%= form.hidden_field :tag_list, data: { tag_field_target: "input" } %>
        </div>
      </div>
      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <%= t '.merge' %>
        </button>
      </div>
    <% end %>
  </div>
</div>
