<div class="container">
  <div class="layout">
    <%= render 'admin/navbar' %>

    <div class="main">
      <div class="card card--surface">
        <div class="headline-small padding-3">
          <%= t 'common.comments' %>
        </div>

        <table class="table border-top border-bottom">
          <tbody>
            <% @comments.each do |comment| %>
              <tr>
                <td>
                  <a href="<%= admin_comment_path(comment) %>">
                    <%= truncate comment.content, length: 35 %>
                  </a>
                </td>
                <td>
                  <%= comment.user.name %>
                </td>
                <td>
                  <%= format_time comment.created_at %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="padding-3">
          <%= paginate @comments %>
        </div>
      </div>
    </div>
  </div>
</div>
