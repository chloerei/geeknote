<div class="display-flex align-items-center gap-3 padding-y-3 border-bottom position-relative">
  <div class="flex-grow-1">
    <div class="title-medium">
      <a href="<%= edit_admin_comment_path(comment) %>" class="link-title link-expended break-word">
        <%= truncate comment.content, length: 70 %>
      </a>
    </div>
    <div class="text-muted">
      <%= comment.user.name %>
      &centerdot;
      <%= format_time comment.created_at %>
    </div>
  </div>
</div>
