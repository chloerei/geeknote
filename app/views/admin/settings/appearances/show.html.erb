<div class="top-app-bar">
  <a href="<%= admin_settings_root_path %>" class="icon-button">
    <x-icon>arrow_back</x-icon>
  </a>
  <div class="top-app-bar__headline">
    <%= t 'general.appearance' %>
  </div>
</div>

<div class="card p-4">
  <%= form_with url: admin_settings_appearance_path, model: @site do |form| %>
    <div class="form-field">
      <%= form.label :name, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :name %>
    </div>

    <div class="form-field">
      <%= form.label :description, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :description %>
    </div>

    <div class="form-field">
      <%= form.label :icon, class: "form-label" %>
      <div class="w-40 h-40">
        <%= render "components/image_field", form: form, name: :icon %>
      </div>
    </div>

    <div class="form-field">
      <%= form.label :global_head_html, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :global_head_html, type: :text_area %>
    </div>

    <div class="form-field">
      <%= form.label :site_header_html, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :site_header_html, type: :text_area %>
    </div>

    <div class="form-field">
      <%= form.label :site_footer_html, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :site_footer_html, type: :text_area %>
    </div>

    <div class="form-field">
      <%= form.label :sidebar_header_html, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :sidebar_header_html, type: :text_area %>
    </div>

    <div class="form-field">
      <%= form.label :sidebar_header_html, class: "form-label" %>
      <%= render "components/text_field", form: form, name: :sidebar_footer_html, type: :text_area %>
    </div>

    <div class="form-field">
      <button type="submit" class="button button--filled">
        <%= t 'general.save_changes' %>
      </button>
    </div>
  <% end %>
</div>
