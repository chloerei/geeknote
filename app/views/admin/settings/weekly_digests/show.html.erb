
<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= admin_settings_root_path %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t 'general.weekly_digest' %>
    </div>
  </div>
  <div class="flex-none">
    <a href="<%= admin_settings_weekly_digest_preview_path %>" class="btn btn-ghost">
      <%= t 'general.send_preview' %>
    </a>
  </div>
</div>


<div class="card card-default">
  <div class="card-body">
    <%= form_with url: admin_settings_weekly_digest_path, model: @site do |form| %>
      <%= render "components/checkbox_field", form: form, name: :weekly_digest_email_enabled %>
      <%= render "components/text_area", form: form, name: :weekly_digest_header_html %>
      <%= render "components/text_area", form: form, name: :weekly_digest_footer_html %>
      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <%= t 'general.save_changes' %>
        </button>
      </div>
    <% end %>
  </div>
</div>
