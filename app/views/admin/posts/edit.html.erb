<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= admin_posts_path %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>

  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t 'general.edit_post' %> #<%= @post.id %>
    </div>
  </div>
</div>

<div class="card card-default">
  <div class="card-body">
    <%= form_with model: @post, url: admin_post_path(@post) do |form| %>
      <%= render "components/text_field", form: form, name: :title %>

      <fieldset class="fieldset">
        <legend class="fieldset-legend">
          <%= t "general.content" %>
        </legend>
        <%= render "components/markdown_field", form: form, name: :content %>
      </fieldset>

      <fieldset class="fieldset">
        <legend class="fieldset-legend">
          <%= t "general.tags" %>
        </legend>
        <div data-controller="tag-field">
          <%= form.hidden_field :tag_list, data: { tag_field_target: "input" } %>
        </div>
      </fieldset>

      <%= render "components/text_field", form: form, name: :canonical_url %>

      <div class="mt-4">
        <button type="submit" class="btn btn-primary">
          <%= t 'general.save_changes' %>
        </button>
      </div>
    <% end %>
  </div>
</div>
