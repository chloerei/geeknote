<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= admin_posts_path %>" class="btn btn-ghost btn-square">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>

  <div class="flex-grow">
    <div class="text-xl font-medium">
      Post #<%= @post.id %>
    </div>
  </div>

  <div class="flex-none">
    <a href="<%= edit_admin_post_path(@post) %>" class="btn btn-ghost">
      <%= t "general.edit" %>
    </a>
    <div class="dropdown dropdown-end">
      <label tabindex="0" class="btn btn-ghost btn-square">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-ellipsis-vertical-icon lucide-ellipsis-vertical"><circle cx="12" cy="12" r="1"/><circle cx="12" cy="5" r="1"/><circle cx="12" cy="19" r="1"/></svg>
      </label>
      <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
        <li>
          <% if @post.restricted? %>
            <a href="<%= unrestrict_admin_post_path(@post) %>" data-turbo-method="patch">
              <%= t "general.unblock" %>
            </a>
          <% else  %>
            <a href="<%= restrict_admin_post_path(@post) %>" data-turbo-method="patch" data-turbo-confirm="<%= t('.restrict_post_confirm') %>">
              <%= t "general.block" %>
            </a>
          <% end %>
        </li>
        <li>
          <a href="<%= admin_post_path(@post) %>" data-turbo-method="delete" data-turbo-confirm="<%= t('.delete_post_confirm') %>">
            <%= t "general.delete" %>
          </a>
        </li>
      </ul>
    </div>
  </div>
</div>

<div class="card card-default">
  <div class="card-body">
    <table class="table">
      <tbody>
        <tr>
          <th class="w-40"><%= t 'general.account' %></th>
          <td>
            <a href="<%= admin_account_path(@post.account.id) %>" class="text-primary underline">
              <%= @post.account.name %>
            </a>
          </td>
        </tr>
        <tr>
          <th class="w-40"><%= t 'general.user' %></th>
          <td>
            <a href="<%= admin_user_path(@post.user) %>" class="text-primary underline">
              <%= @post.user.name %>
            </a>
          </td>
        </tr>
        <tr>
          <th class="w-40"><%= t 'general.public_link' %></th>
          <td>
            <a href="<%= account_post_path(@post.account, @post) %>" class="text-primary underline">
              <%= account_post_path(@post.account, @post) %>
            </a>
          </td>
        </tr>
        <% @post.attributes.each do |name, value| %>
          <tr>
            <th class="w-40"><%= name %></th>
            <td class="break-words"><%= value %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
