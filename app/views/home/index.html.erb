<div class="">
  <div class="text-lg font-medium">
    <%= t "general.home" %>
  </div>

  <div class="flex items-center gap-2 mt-6">
    <a href="<%= root_path %>" class="tab tab--primary <%= "tab--active" if current_page?(root_path) %>">
      <x-icon>trending_up</x-icon>
      <%= t "general.popular" %>
    </a>
    <a href="<%= following_path %>" class="tab tab--primary <%= "tab--active" if current_page?(following_path) %>">
      <x-icon>inbox</x-icon>
      <%= t "general.following" %>
    </a>
    <a href="<%= newest_path %>" class="tab tab--primary <%= "tab--active" if current_page?(newest_path) %>">
      <x-icon>bolt</x-icon>
      <%= t "general.newest" %>
    </a>
  </div>

  <div class="flex gap-6 mt-6">
    <div class="flex-grow min-w-0">
      <%= render "components/scroll_pagination", pagy: @pagy do %>
        <%= render partial: "post", collection: @posts, cached: -> post { [ post.account, post.user, post ] } %>
      <% end %>
    </div>

    <div class="hidden md:block flex-shrink-0 w-80">
      <%= render "sidebar" %>
    </div>
  </div>
</div>
