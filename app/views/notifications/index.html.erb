<div class="container container--medium">
  <div class="subheader">
    <%= t 'common.notifications' %>
  </div>
  <div class="list">
    <% @notifications.each do |notification| %>
      <% begin %>
        <%= render "notifications/#{notification.type}", notification: notification %>
      <% rescue %>
        <% notification.destroy %>
      <% end %>
    <% end %>
  </div>

  <%= paginate @notifications %>
</div>
