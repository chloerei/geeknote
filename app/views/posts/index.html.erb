<div class="container">
  <div class="layout">
    <div class="navbar display-flex flex-direction-column gap-3">
      <div class="card card--surface padding-2">
        <div class="tab flex-direction-column@tablet">
          <a href="<%= root_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'index' %>">
            <div class="tab__item__icon">
              <span class="material-icons">whatshot</span>
            </div>
            <div class="tab__item__label">
              <%= t 'common.hot' %>
            </div>
          </a>
          <a href="<%= following_posts_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'following' %>">
            <div class="tab__item__icon">
              <span class="material-icons">feed</span>
            </div>
            <div class="tab__item__label">
              <%= t 'common.feed' %>
            </div>
          </a>
          <a href="<%= newest_posts_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'newest' %>">
            <div class="tab__item__icon">
              <span class="material-icons">auto_awesome</span>
            </div>
            <div class="tab__item__label">
              <%= t 'common.newest' %>
            </div>
          </a>
        </div>
      </div>
    </div>

    <div class="flex-grow-1">
      <div class="display-flex flex-direction-column gap-3">
        <%= render partial: 'account/posts/post', collection: @posts, cached: true %>
      </div>

      <div class="padding-3">
        <%= paginate @posts %>
      </div>
    </div>

    <div class="sidebar display-none display-flex@laptop flex-direction-column gap-3">
      <% if !current_user %>
        <div class="card card--surface padding-3">
          <h3 class="title-medium margin-top-0">
            <%= t '.join_geeknote_title' %>
          </h3>
          <p>
            <%= t '.join_geeknote_description' %>
          </p>
          <div class="display-flex gap-2">
            <a href="<%= sign_up_path %>" class="button button--filled">
              <%= t 'common.sign_up' %>
            </a>
            <a href="<%= sign_in_path %>" class="button button--outlined">
              <%= t 'common.sign_in' %>
            </a>
          </div>
        </div>
      <% else %>
        <% if !current_user.email_verified? %>
          <div class="card card--filled padding-3">
            <h3 class="title-medium margin-top-0">
              <%= t '.verify_email_title' %>
            </h3>
            <p>
              <%= t '.verify_email_description' %>
            </p>
            <a href="<%= settings_email_path %>" class="button button--filled">
              <%= t '.email_settings' %>
            </a>
          </div>
        <% end %>
      <% end %>

      <div class="card card--surface">
        <div class="title-medium padding-x-3 padding-top-3 padding-bottom-2">
          <%= t 'common.related_tags' %>
        </div>
        <div class="padding-bottom-2">
          <% @posts.map(&:tags).flatten.tally.sort_by{ |tag, count| -count }.first(5).each do |tag, count| %>
            <a href="<%= tag_path(id: tag.name) %>" class="link-block padding-x-3 padding-y-2">
              <div class="title-small">
                #<%= tag.name %>
              </div>
              <div class="body-medium text-muted">
                <%= t 'common.posts_count', count: tag.taggings_count %>
              </div>
            </a>
          <% end %>
        </div>
      </div>

      <div class="card card--surface">
        <div class="title-medium padding-x-3 padding-top-3 padding-bottom-2">
          <%= t 'common.related_users' %>
        </div>
        <div class="padding-bottom-2">
          <% @posts.map(&:account).tally.sort_by{ |account, count| -count }.first(3).each do |account, count| %>
            <a href="<%= account_root_path(account) %>" class="link-block padding-x-3 padding-y-2">
              <div class="display-flex gap-2">
                <div class="avatar flex-shrink-0">
                  <%= avatar_image_tag account.owner.avatar %>
                </div>
                <div class="felx-grow-1">
                  <div class="title-small">
                    <%= account.display_name %>
                  </div>
                  <div class="body-medium">
                    <%= account.description %>
                  </div>
                </div>
              </div>
            </a>
          <% end %>
        </div>
      </div>

    </div>
  </div>
</div>
