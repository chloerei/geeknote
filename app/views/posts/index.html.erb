<div class="container">
  <div class="display-flex gap-5 padding-3">
    <div class="flex-grow-1">
      <div class="tab margin-bottom-4">
        <a href="<%= root_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'index' %>">
          <%= t 'common.recommend' %>
        </a>
        <a href="<%= following_posts_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'following' %>">
          <%= t 'common.following' %>
        </a>
        <a href="<%= latest_posts_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'latest' %>">
          <%= t 'common.latest' %>
        </a>
      </div>

      <div class="list">
        <%= render partial: 'account/posts/post', collection: @posts, cached: true %>
      </div>

      <div class="padding">
        <%= paginate @posts %>
      </div>
    </div>

    <div class="sidebar">
      <% if !current_user %>
        <div class="card card--outlined padding-3 margin-bottom-4">
          <h3 class="title-medium margin-top-0">
            <%= t '.join_geeknote_title' %>
          </h3>
          <p>
            <%= t '.join_geeknote_description' %>
          </p>
          <div class="display-flex gap-2">
            <a href="<%= sign_up_path %>" class="button button--filled">
              <%= t 'common.sign_up' %>
            </a>
            <a href="<%= sign_in_path %>" class="button button--outlined">
              <%= t 'common.sign_in' %>
            </a>
          </div>
        </div>
      <% else %>
        <% if !current_user.email_verified? %>
          <div class="card card--outlined padding-3 margin-bottom-4">
            <h3 class="title-medium margin-top-0">
              <%= t '.verify_email_title' %>
            </h3>
            <p>
              <%= t '.verify_email_description' %>
            </p>
            <a href="<%= settings_email_path %>" class="button button--filled">
              <%= t '.email_settings' %>
            </a>
          </div>
        <% end %>
      <% end %>

      <div class="margin-bottom-4">
        <h3 class="title-medium margin-top-0">
          <%= t '.hot_tags' %>
        </h3>
        <div class="padding">
          <div class="display-flex flex-wrap gap-2">
            <% Tag.order(taggings_count: :desc).limit(9).each do |tag| %>
              <a href="<%= tag_path(id: tag.name) %>" class="chip chip--assist">
                <div class="chip__label">
                  <%= tag.name %>
                </div>
              </a>
            <% end %>
          </div>
        </div>
      </div>

      <div class="margin-bottom-4">
        <h3 class="title-medium margin-top-0">
          <%= t '.who_to_follow' %>
        </h3>
        <div class="display-flex flex-direction-column gap-3">
          <%= render partial: 'account/follows/account', collection: Account.recommend_for(current_user).limit(3).includes(:owner) %>
        </div>
      </div>

    </div>
  </div>
</div>
