<div class="container container--small padding-3">
  <div class="card card--surface padding-3">
    <div id="main">
      <h2 class="headline-medium margin-top-0 margin-bottom-3">
        <%= t '.unsubscribe_email' %>
      </h2>
      <%= form_with url: user_email_unsubscribe_path(token: params[:token], type: params[:type]), method: :patch, data: { controller: 'form', action: 'turbo:load@window->form#submit' } do |form| %>
        <%= t '.unsubscribing' %>
      <% end %>
    </div>
  </div>
</div>
