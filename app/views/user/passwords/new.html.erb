<div class="container container--micro padding-3">
  <div class="card card--elevated background-surface">
    <div class="top-app-bar">
      <div class="top-app-bar__title">
        <%= t 'common.forgot_password?' %>
      </div>
    </div>

    <div class="padding-3">
      <%= form_with model: @user, url: user_password_path, builder: CustomFormBuilder do |form| %>
        <div class="margin-bottom-3">
          <%= form.text_field :email, autofocus: true %>
        </div>
        <div class="margin-bottom-3">
          <%= recaptcha_tag %>
        </div>
        <% if @user.errors[:base].any? %>
          <div class="padding-3 background-error-container margin-bottom-3">
            <%= @user.errors[:base].first %>
          </div>
        <% end %>
        <button type="submit" class="button button--filled">
          <%= t('common.send_password_reset_email') %>
        </button>
      <% end %>
    </div>
  </div>
</div>
