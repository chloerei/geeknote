<%= form_with model: @user, url: user_password_path(token: params[:token]), builder: CustomFormBuilder, class: 'form', id: 'password-reset-form' do |form| %>
  <div class="form__field">
    <%= form.password_field :password %>
  </div>
  <div class="form__field">
    <%= form.password_field :password_confirmation %>
  </div>
  <%= form.submit t('common.submit'), class: 'button button--contained button--primary' %>
<% end %>
