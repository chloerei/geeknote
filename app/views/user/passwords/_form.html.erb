<%= form_with model: @user, url: user_password_path(token: params[:token]), builder: CustomFormBuilder, class: 'form', id: 'password-reset-form' do |form| %>
  <div class="form__field">
    <%= form.password_field :password %>
  </div>
  <div class="form__field">
    <%= form.password_field :password_confirmation %>
  </div>
  <button type="submit" class="button button--filled">
    <%= t('common.submit') %>
  </button>
<% end %>
