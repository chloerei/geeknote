<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <label for="drawer" class="btn btn-square btn-ghost lg:hidden">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-menu-icon lucide-menu"><path d="M4 5h16"/><path d="M4 12h16"/><path d="M4 19h16"/></svg>
    </label>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= t "general.overview" %>
    </div>
  </div>
</div>

<div class="card bg-base-100">
  <div class="card-body">
    <h2 class="card-title">
      <%= t "general.data" %>
    </h2>

    <div class="stats stats-vertical md:stats-horizontal border border-base-300">
      <div class="stat">
        <div class="stat-title">
          <%= t "general.followers" %>
        </div>
        <div class="stat-value">
          <%= @account.followers.count %>
        </div>
      </div>

      <div class="stat">
        <div class="stat-title">
          <%= t "general.page_view" %>
        </div>
        <div class="stat-value">
          #todo
        </div>
      </div>

      <div class="stat">
        <div class="stat-title">
          <%= t "general.likes" %>
        </div>
        <div class="stat-value">
          #todo
        </div>
      </div>
    </div>
  </div>
</div>
