<div class="flex items-center justify-between px-4 py-3 border-b border-outline-variant gap-4 relative">
  <div class="flex-grow min-w-0">
    <div>
      <a href="<%= edit_dashboard_post_path(post.account.name, post) %>" class="font-medium break-words line-clamp-1 hover:text-primary after:absolute after:inset-0">
        <%= post.title.presence || t("general.untitled") %>
      </a>
    </div>
    <div class="text-sm font-medium text-on-surface-variant mt-1">
      <span>
        <%= post.user.name %>
      </span>
      <% if post.account.organization? %>
        <span>
          <%= t "general.in" %>
          <%= post.account.owner.name %>
        </span>
      <% end %>
      &centerdot;
      <span>
        <%= format_time post.updated_at %>
      </span>
    </div>
  </div>
  <div class="flex-shrink-0">
    <% case post.status %>
    <% when "draft" %>
      <div class="inline-block px-2 rounded bg-surface-container">
        <%= t "general.draft" %>
      </div>
    <% when "published" %>
      <div class="inline-block px-2 rounded bg-primary-container">
        <%= t "general.published" %>
      </div>
    <% when "trashed" %>
      <div class="inline-block px-2 rounded bg-tertiary-container">
        <%= t "general.trashed" %>
      </div>
    <% end %>
  </div>
</div>
