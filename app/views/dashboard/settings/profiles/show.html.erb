<div class="top-app-bar">
  <a href="<%= dashboard_settings_root_path %>" class="icon-button">
    <x-icon>arrow_back</x-icon>
  </a>
  <div class="top-app-bar__headline">
    <%= t "general.profile" %>
  </div>
</div>

<div class="card">
  <div class="p-4">
    <div class="max-w-screen-sm">
      <% if @account.user? %>
        <%= render "user_form", user: @account.owner %>
      <% else %>
        <%= render "organization_form", organization: @account.owner %>
      <% end %>
    </div>
  </div>
</div>
