<div class="top-app-bar">
  <a href="<%= dashboard_settings_root_path %>" class="icon-button">
    <x-icon>arrow_back</x-icon>
  </a>
  <div class="top-app-bar__headline">
    <%= t "general.export" %>
  </div>
</div>

<div class="card">
  <div class="p-4">
    <div class="max-w-screen-sm">
      <p>
        <%= t ".export_description" %>
      </p>

      <div class="mt-4">
        <%= form_with url: dashboard_settings_export_path, method: :post do |form| %>
          <button type="submit" class="button button--filled">
            <%= t "general.export" %>
          </button>
        <% end %>
      </div>

      <% if @account.export %>
        <div class="mt-4">
          <div>
            <%= t ".last_exported_at" %>
            <%= format_time @account.export.created_at %>
          </div>

          <div class="mt-4">
            <% if @account.export.completed? %>
              <a href="<%= url_for(@account.export.file) %>" class="button button--outlined">
                <%= t "general.download" %>
              </a>
            <% else %>
              <span class="text-on-surface-variant">
                <%= t ".export_in_progress" %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
