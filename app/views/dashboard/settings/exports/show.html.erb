<div class="card card-border border-base-300 bg-base-100">
  <div class="card-body">
    <h2 class="card-title">
      <%= t "general.export" %>
    </h2>

    <div class="max-w-screen-sm mt-4">
      <p>
        <%= t ".export_description" %>
      </p>

      <div class="mt-4">
        <%= form_with url: dashboard_settings_export_path, method: :post do |form| %>
          <button type="submit" class="btn btn-primary">
            <%= t "general.export" %>
          </button>
        <% end %>
      </div>

      <% if @account.export %>
        <div class="mt-4">
          <div>
            <%= t ".last_exported_at" %>
            <%= format_time @account.export.created_at %>
          </div>

          <div class="mt-4">
            <% if @account.export.completed? %>
              <a href="<%= url_for(@account.export.file) %>" class="btn btn-soft">
                <%= t "general.download" %>
              </a>
            <% else %>
              <span class="text-sm text-base-content/80">
                <%= t ".export_in_progress" %>
              </span>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
