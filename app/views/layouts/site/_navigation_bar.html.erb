<div class="navigation-bar md:hidden pb-safe">
  <% if request.path.in?([ "/", "/following", "/newest", "/notifications", "/bookmarks", "/me" ]) %>
    <% if Current.user %>
      <div class="fixed right-4 bottom-24 pb-safe">
        <a href="<%= new_dashboard_post_path(Current.user.account.name) %>" class="floating-action-button">
          <x-icon>edit_square</x-icon>
        </a>
      </div>
    <% end %>
  <% end %>

  <%= render "components/navigation_bar_item", url: root_path, icon: :home, label: t("general.home"), active: request.path.in?([root_path]) %>

  <% if Current.user %>
    <%= render "components/navigation_bar_item", url: notifications_path, icon: :notifications, label: t("general.notifications"), active: current_page?(notifications_path), badge: Current.user.notifications.unread.count %>

    <%= render "components/navigation_bar_item", url: bookmarks_path, icon: :bookmarks, label: t("general.bookmarks"), active: current_page?(bookmarks_path) %>

    <%= render "components/navigation_bar_item", url: dashboard_root_path(Current.user.account.name), icon: :post, label: t("general.posts"), active: request.path.start_with?("/dashboard") %>
  <% end %>

  <div class="menu flex-grow basis-0">
    <label tabindex="0" class="navigation-bar__item">
      <div class="navigation-bar__item__icon">
        <% if Current.user %>
          <img src="<%= avatar_url(Current.user) %>" class="h-6 w-6 rounded-full">
        <% else %>
          <img src="<%= asset_path("avatar.png") %>" class="h-6 w-6 rounded-full">
        <% end %>
      </div>
      <div class="navigation-bar__item__label">
        <%= t "general.me" %>
      </div>
    </label>
    <div tabindex="0" class="menu__content top-auto left-auto bottom-full right-0 origin-bottom-right md:left-full md:bottom-0 md:origin-bottom-left">
      <% if Current.user %>
        <a href="<%= account_root_path(Current.user.account.name) %>" class="menu__item">
          <x-icon>account_circle</x-icon>
          <span>
            Profile
          </span>
        </a>

        <a href="<%= settings_root_path %>" class="menu__item">
          <x-icon>settings</x-icon>
          <span>
            Settings
          </span>
        </a>

        <%= form_with url: sign_out_path, method: :delete do |form| %>
          <button type="submit" class="menu__item">
            <x-icon>logout</x-icon>
            <span>
              Sign out
            </span>
          </button>
        <% end %>
      <% else %>
        <a href="<%= sign_in_path %>" class="menu__item">
          <x-icon>login</x-icon>
          <span>
            Sign in
          </span>
        </a>

        <a href="<%= sign_up_path %>" class="menu__item">
          <x-icon>person_add</x-icon>
          <span>
            Sign up
          </span>
        </a>
      <% end %>
    </div>
  </div>
</div>
