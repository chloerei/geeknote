<% content_for :body do %>
  <div class="app-bar-wrapper">
    <div class="app-bar app-bar--borderless">
      <div class="toolbar">
        <div class="toolbar__title">
          <a href="/">
            Community
          </a>
        </div>
        <% if current_user %>
          <div class="toolbar__action">
            <a href="#" class="button button--icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M15.5 14h-.79l-.28-.27C15.41 12.59 16 11.11 16 9.5 16 5.91 13.09 3 9.5 3S3 5.91 3 9.5 5.91 16 9.5 16c1.61 0 3.09-.59 4.23-1.57l.27.28v.79l5 4.99L20.49 19l-4.99-5zm-6 0C7.01 14 5 11.99 5 9.5S7.01 5 9.5 5 14 7.01 14 9.5 11.99 14 9.5 14z"/></svg>
            </a>
          </div>
          <div class="toolbar__action">
            <a href="#" class="button button--icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M15 7v12.97l-4.21-1.81-.79-.34-.79.34L5 19.97V7h10m4-6H8.99C7.89 1 7 1.9 7 3h10c1.1 0 2 .9 2 2v13l2 1V3c0-1.1-.9-2-2-2zm-4 4H5c-1.1 0-2 .9-2 2v16l7-3 7 3V7c0-1.1-.9-2-2-2z"/></svg>
            </a>
          </div>
          <div class="toolbar__action dropdown" data-controller="dropdown">
            <button type="button" class="button button--icon" data-action="dropdown#toggle">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M19 13h-6v6h-2v-6H5v-2h6V5h2v6h6v2z"/></svg>
            </button>
            <div class="dropdown__menu dropdown__menu--top-right">
              <a href="#" class="dropdown__item">New post</a>
              <a href="#" class="dropdown__item">New series</a>
            </div>
          </div>
          <div class="toolbar__action">
            <a href="#" class="button button--icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M19.29 17.29L18 16v-5c0-3.07-1.64-5.64-4.5-6.32V4c0-.83-.67-1.5-1.5-1.5s-1.5.67-1.5 1.5v.68C7.63 5.36 6 7.92 6 11v5l-1.29 1.29c-.63.63-.19 1.71.7 1.71h13.17c.9 0 1.34-1.08.71-1.71zM16 17H8v-6c0-2.48 1.51-4.5 4-4.5s4 2.02 4 4.5v6zm-4 5c1.1 0 2-.9 2-2h-4c0 1.1.89 2 2 2z"/></svg>
            </a>
          </div>
          <div class="toolbar__action dropdown" data-controller="dropdown">
            <button type="button" class="button button--icon" data-action="dropdown#toggle">
              <svg xmlns="http://www.w3.org/2000/svg" height="24" viewBox="0 0 24 24" width="24"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M12 6c1.1 0 2 .9 2 2s-.9 2-2 2-2-.9-2-2 .9-2 2-2m0 10c2.7 0 5.8 1.29 6 2H6c.23-.72 3.31-2 6-2m0-12C9.79 4 8 5.79 8 8s1.79 4 4 4 4-1.79 4-4-1.79-4-4-4zm0 10c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/></svg>
            </button>
            <div class="dropdown__menu dropdown__menu--top-right">
              <a href="<%= space_root_path(space_path: current_user.space.path) %>" class="dropdown__item">Profile</a>
              <a href="#" class="dropdown__item">Drafts</a>
              <a href="#" class="dropdown__item">Series</a>
              <a href="#" class="dropdown__item">Settings</a>
              <hr class="divider">
              <a href="#" class="dropdown__item">Sign out</a>
            </div>
          </div>
        <% end %>
      </div>
    </div>
    <div class="app-content">
      <%= content_for?(:app_content) ? yield(:app_content) : yield %>
    </div>
  </div>
<% end %>

<%= render template: 'layouts/base' %>
