<% content_for :body do %>
  <div class="flex container mx-auto">
    <div class="shrink-0">
      <%= render "layouts/site/navigation_rail" %>
      <%= render "layouts/site/navigation_drawer" %>
    </div>

    <div class="flex-grow min-w-0">
      <%= raw @site.site_header_html %>

      <div class="px-4 md:px-6 pb-4">
        <%= yield %>
      </div>

      <%= raw @site.site_footer_html %>

      <%= render "layouts/site/navigation_bar" %>
    </div>
  </div>
<% end %>

<%= render template: "layouts/application" %>
