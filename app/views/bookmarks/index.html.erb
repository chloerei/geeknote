<div class="container container--medium">
  <h3 class="padding-x">Reading list</h3>

  <div class="tab border-bottom">
    <a href="<%= bookmarks_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'index' %>">Saved</a>
    <a href="<%= archived_bookmarks_path %>" class="tab__item <%= 'tab__item--active' if action_name == 'archived' %>">Archived</a>
  </div>

  <div class="posts">
    <%= render @bookmarks %>
  </div>

  <div class="toolbar">
    <div class="toolbar__space">
    </div>
    <div class="toolbar__text">
      <%= page_entries_info @bookmarks %>
    </div>
    <div class="toolbar__action">
      <%= paginate @bookmarks %>
    </div>
  </div>
</div>
