<% @page_title = @post.title %>

<% content_for :head do %>
  <meta property="og:type" content="article">
  <meta property="og:title" content="<%= @post.title %>">
  <meta property="og:url" content="<%= account_post_url(@account, @post) %>">
  <meta property="og:description" content="<%= post_summary @post %>">
  <% if @post.featured_image.attached? %>
    <meta property="og:image" content="<%= featured_image_url @post.featured_image %>">
  <% end %>

  <meta name="twitter:card" content="summary_large_image">
  <meta name="twitter:title" content="<%= @post.title %>">
  <meta name="twitter:description" content="<%= post_summary @post %>">
  <% if @post.featured_image.attached? %>
    <meta name="twitter:image" content="<%= featured_image_url @post.featured_image %>">
  <% end %>

  <link rel="canonical" href="<%= @post.canonical_url || account_post_url(@account, @post) %>">
<% end %>

<div class="">
  <div class="container">
    <div class="layout">
      <div class="navbar">

        <div class="card card--surface padding-3 display-flex flex-direction-column gap-2 position-sticky top-3 z-index-1">
          <%= render 'account/posts/likes/button', post: @post %>

          <a href="<%= account_post_comments_path(@account, @post) %>" class="button button--text width-100">
            <div class="button__icon">
              <span class="material-icons">comments</span>
            </div>
            <div class="button__label">
              <%= @post.comments_count %> <%= t 'common.comments' %>
            </div>
          </a>

          <%= render 'account/posts/collections/button', post: @post %>
        </div>
      </div>

      <div class="main">
        <% if @post.draft? %>
          <div class="card card--filled padding-3 margin-bottom-3">
            <div class="title-medium">
              <%= t 'common.unpublished_post' %>
              <a href="<%= edit_account_dashboard_post_path(@post.account, @post) %>">
                <%= t 'common.continute_editing' %>
              </a>
            </div>
          </div>
        <% end %>

        <div class="card card--surface padding-3 margin-bottom-3">
          <div class="display-flex margin-bottom-3">
            <h1 class="headline-small margin-0 flex-grow-1">
              <%= @post.title.presence || t('common.untitled') %>
            </h1>

            <div class="dropdown" data-controller="dropdown" data-visible-to-user="<%= @post.author_users.pluck(:id).first %>">
              <button type="button" class="button button--icon" data-action="dropdown#toggle">
                <span class="material-icons">more_horiz</span>
              </button>

              <div class="dropdown__container dropdown__container--top-right">
                <a href="<%= edit_account_dashboard_post_path(@account, @post) %>" class="dropdown__item">
                  <%= t 'common.edit' %>
                </a>
              </div>
            </div>
          </div>

          <div class="display-flex align-items-center gap-2 margin-y-3">
            <a href="<%= account_root_path(@post.account) %>" class="link-title">
              <div class="display-flex gap-2 align-items-center">
                <div class="avatar">
                  <%= avatar_image_tag @post.account.owner.avatar %>
                </div>
                <div class="">
                  <b><%= @post.account.owner.name %></b>
                </div>
              </div>
            </a>

            <% if @post.published_at %>
              &centerdot;
              <div class="text-muted">
                <%= format_time @post.published_at %>
              </div>
            <% end %>

            <% if @post.canonical_url %>
              &centerdot;
              <div class="text-muted">
                <%= t 'common.originally_published_at' %> <%= link_to_canonical_url @post.canonical_url %>
              </div>
            <% end %>
          </div>

          <% if @post.featured_image.attached? %>
            <div class="feature-image">
              <%= featured_image_tag @post.featured_image %>
            </div>
          <% end %>

          <div class="typography">
            <%= markdown_render @post.content %>
          </div>

          <% if @post.tags.any? %>
            <div class="post__tags margin-top-3">
              <% @post.tags.each do |tag| %>
                <a href="<%= tag_path(id: tag.name) %>" class="chip chip--assist">
                  <%= tag.name %>
                </a>
              <% end %>
            </div>
          <% end %>
        </div>

        <% if @post.comments_count > 3 %>
          <div class="margin-y-3">
            <a href="<%= account_post_comments_path(@account, @post) %>" class="button button--text width-100 justify-content-center">
              <%= t 'common.show_all_comments' %> (<%= @post.comments_count %>)
            </a>
          </div>
        <% end %>

        <div id="comments" class="display-flex flex-direction-column gap-3">
          <%= render partial: 'account/posts/comments/comment', collection: @post.comments.with_liked(current_user).order(created_at: :desc).limit(3).reverse, cached: -> (comment) { [comment, comment.liked] } %>
        </div>

        <% if @post.allow_comments? %>
          <div class="margin-top-3">
            <% if current_user %>
              <%= render 'account/posts/comments/form', comment: Comment.new %>
            <% else %>
              <a href="<%= sign_in_path(return_to: url_for()) %>" class="button button--filled">
                <%= t 'common.sign_in_to_comment' %>
              </a>
            <% end %>
          </div>
        <% else %>
          <div class="padding-3 text-muted text-align-center">
            <%= t 'common.comment_is_disabled' %>
          </div>
        <% end %>
      </div>

      <div class="sidebar">
        <div class="display-flex flex-direction-column gap-3">
          <%= render 'account/profile_card', account: @account %>
        </div>
      </div>
    </div>
  </div>
</div>
