<div class="container container--post">
  <div class="post">
    <% if @post.featured_image.attached? %>
      <div class="post__feature-image">
        <%= image_tag @post.featured_image %>
      </div>
    <% end %>
    <h1 class="post__title"><%= @post.title %></h1>

    <div class="toolbar toolbar--breakout">
      <div class="toobar__author">
        <div class="flex">
          <div class="avatar-group margin-right">
            <div class="avatar">
              <%= avatar_image_tag @post.account.owner.avatar %>
            </div>
            <% if @post.account.organization? && @post.author_users.any? %>
              <% @post.author_users.each do |user| %>
                <div class="avatar">
                  <%= avatar_image_tag user.avatar %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div>
            <div class="text-primary">
              <a href="<%= account_root_path(@post.account) %>" class="link-text text-bold"><%= @post.account.owner.name %></a>
              <% if @post.account.organization? && @post.author_users.any? %>
                by
                <% @post.author_users.each do |user| %>
                  <a href="<%= account_root_path(user.account) %>" class="link-text text-bold"><%= user.name %></a>
                <% end %>
              <% end %>
            </div>
            <div class="text-secondary">
              <%= local_time @post.created_at, format: :short %>
            </div>
          </div>
        </div>
      </div>
      <div class="toolbar__space">
      </div>
      <div class="toolbar__action">
        <%= render 'account/posts/share_button', post: @post %>
      </div>
      <div class="toolbar__action">
        <%= render 'account/posts/bookmarks/button', post: @post %>
      </div>
      <div class="toolbar__action">
        <button type="button" class="button button--icon">
          <span class="material-icons">more_horiz</span>
        </button>
      </div>
    </div>

    <div class="post__content typography">
      <%= markdown_render @post.content %>
    </div>

    <% if @post.tags.any? %>
      <div class="post__tags">
        <% @post.tags.each do |tag| %>
          <a href="<%= account_tag_path(@account, id: tag.name) %>" class="chip">
            <%= tag.name %>
          </a>
        <% end %>
      </div>
    <% end %>

    <div class="toolbar toolbar--breakout">
      <div class="toolbar__action">
        <%= render 'account/posts/likes/button', post: @post %>
      </div>
      <div class="toolbar__space">
      </div>
      <div class="toolbar__action">
        <%= render 'account/posts/share_button', post: @post %>
      </div>
      <div class="toolbar__action">
        <%= render 'account/posts/bookmarks/button', post: @post, suffix: '-bottom' %>
      </div>
      <div class="toolbar__action">
        <button type="button" class="button button--icon">
          <span class="material-icons">more_horiz</span>
        </button>
      </div>
    </div>
  </div>

  <hr class="divider margin-x">

  <div class="list">
    <div class="list__item">
      <div class="list__avatar">
        <a href="<%= account_root_path(@post.account) %>" class="link-text">
          <div class="avatar">
            <%= avatar_image_tag @post.account.owner.avatar %>
          </div>
        </a>
      </div>
      <div class="list__content">
        <a href="<%= account_root_path(@post.account) %>" class="link-text text-primary text-bold">
          <%= @post.account.owner.name %>
        </a>
        <div class="text-secondary">
          <% if @post.account.user? %>
            <%= @post.account.owner.bio %>
          <% else %>
            <%= @post.account.owner.description %>
          <% end %>
        </div>
      </div>
      <% if @post.account != current_user.account %>
        <div class="list__action">
          <%= render 'account/follows/button', account: @post.account %>
        </div>
      <% end %>
    </div>
    <% if @post.account.organization? %>
      <% @post.author_users.each do |user| %>
        <div class="list__item">
          <div class="list__avatar">
            <a href="<%= account_root_path(user.account) %>" class="link-text">
              <%= avatar_image_tag user.avatar %>
            </a>
          </div>
          <div class="list__content">
            <a href="<%= account_root_path(user.account) %>" class="link-text text-primary text-bold">
              <%= user.name %>
            </a>
            <div class="text-secondary">
              <%= user.bio %>
            </div>
          </div>
          <% if user != current_user %>
            <div class="list__action">
              <%= render 'account/follows/button', account: user.account %>
            </div>
          <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <hr class="divider margin-x">

  <% if @post.allow_comments? %>
    <h4 class="padding-x">
      <%= t 'common.comments' %> (<%= @post.comments_count %>)
    </h4>

    <% if current_user %>
      <%= render 'account/posts/comments/form', comment: Comment.new %>
    <% else %>
      <div class="padding">
        <a href="<%= sign_in_path(return_to: url_for()) %>" class="button button--contained button--primary" data-turbo-frame="_top">Sign in to comment</a>
      </div>
    <% end %>
    <hr class="divider margin-x">
    <div id="comments" class="comments">
      <%= render partial: 'account/posts/comments/comment', collection: @post.comments.with_liked(current_user).order(likes_count: :desc).limit(3) %>
    </div>
    <div class="margin-y">
      <a href="<%= account_post_comments_path(@account, @post) %>" class="button button--text width-100">
        <div class="button__text">
          <%= t 'common.view_all' %>
        </div>
        <div class="button__icon">
          <span class="material-icons">expand_more</span>
        </div>
      </a>
    </div>
  <% else %>
    <div class="padding text-muted text-align-center">
      Comment is disabled.
    </div>
  <% end %>
</div>
