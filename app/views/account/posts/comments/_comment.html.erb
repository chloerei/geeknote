<div class="display-flex gap-3 padding-y-3 comment" id="comment-<%= comment.id %>">
  <div class="avatar flex-shrink-0">
    <a href="<%= account_root_path(comment.user.account) %>">
      <%= avatar_image_tag comment.user.avatar %>
    </a>
  </div>
  <div class="flex-grow-1">
    <div class="display-flex align-items-center margin-bottom-2">
      <div class="flex-grow-1">
        <div class="display-flex gap-1">
          <a href="<%= account_root_path(comment.user.account) %>" class="link-text">
            <b><%= comment.user.name %></b>
          </a>
          <span class="text-muted">&centerdot;</span>
          <a href="<%= account_post_comment_path(@account, @post, comment) %>" class="link-text">
            <span class="text-muted"><%= format_time comment.created_at %></span>
          </a>
        </div>
      </div>
      <div class="toolbar__action" data-visible-to-user="<%= comment.user_id %>">
        <div class="dropdown" data-controller="dropdown">
          <button type="button" class="button button--icon" data-action="dropdown#toggle">
            <span class="material-icons">more_horiz</span>
          </button>
          <div class="dropdown__container dropdown__container--top-right">
            <a href="<%= edit_account_post_comment_path(@account, @post, comment) %>" class="dropdown__item" data-visible-to-user="<%= comment.user_id %>">
              <%= t 'common.edit' %>
            </a>
            <%= form_with url: account_post_comment_path(@account, @post, comment), method: 'delete', data: { 'visible-to-user': comment.user_id, 'turbo-confirm': "Are you sure delete this comment?" } do |form| %>
              <button type="submit" class="dropdown__item">
                <%= t 'common.delete' %>
              </button>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <% if comment.parent %>
      <div class="comment__reply-to body-medium">
        <a href="<%= account_post_comment_path(@account, @post, comment.parent) %>" class="card card--outlined padding-3 background-surface-variant">
          <div class="display-flex align-items-center gap-1">
            <span><%= t 'common.reply_to' %></span>
            <b><%= comment.parent.user.name %></b>
            <span>&centerdot;</span>
            <span><%= format_time comment.parent.created_at %></span>
          </div>
          <div>
            <%= comment_summary comment.parent %>
          </div>
        </a>
      </div>
    <% end %>

    <div class="typography">
      <%= markdown_render comment.content %>
    </div>

    <div class="display-flex justify-content-center comment__actions">
      <%= render 'account/posts/comments/likes/button', comment: comment %>
      <% if comment.replies_count > 0 %>
        <a href="<%= account_post_comment_path(@account, @post, comment, anchor: 'comments') %>" class="button button--text button--muted">
          <div class="button__icon">
            <span class="material-icons">comment</span>
          </div>
          <div class="button__label">
            <%= comment.replies_count %> <%= t 'common.replies' %>
          </div>
        </a>
      <% end %>
      <div class="flex-grow-1">
      </div>
      <a href="<%= account_post_comment_path(@account, @post, comment, anchor: "reply") %>" class="button button--text button--muted">
        <div class="button__icon">
          <span class="material-icons">reply</span>
        </div>
        <div class="button__text">
          <%= t 'common.reply' %>
        </div>
      </a>
    </div>
  </div>
</div>
