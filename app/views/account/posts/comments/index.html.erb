<div class="flex gap-6">
  <div class="flex-grow min-w-0">
    <div class="bg-surface-container-lowest rounded-xl">
      <div class="flex items-center p-2 gap-2">
        <div class="flex-shrink-0">
          <a href="<%= account_post_path(@account.name, @post) %>" class="icon-button">
            <%= material_icon :arrow_back %>
          </a>
        </div>
        <div class="flex-grow px-2 text-lg font-medium line-clamp-1">
          <%= @post.title %>
        </div>
      </div>
    </div>

    <div id="comments" class="">
      <div class="flex items-center p-2 gap-4">
        <div class="flex-grow font-medium px-2">
          <%= t "general.comments" %> <%= @pagy.count %>
        </div>
        <div class="menu">
          <label tabindex="0" class="text-button text-on-surface-variant">
            <%= material_icon :sort %>
            <span>
              <%=
                case @sort
                when "oldest"
                  t("general.oldest")
                when "likes"
                  t("general.most_likes")
                else
                  t("general.newest")
                end
              %>
            </span>
          </label>
          <div class="menu__content top-full right-0 origin-top-right">
            <a href="<%= url_for(sort: nil) %>" class="menu__item">
              <%= t "general.newest" %>
            </a>
            <a href="<%= url_for(sort: "oldest") %>" class="menu__item">
              <%= t "general.oldest" %>
            </a>
            <a href="<%= url_for(sort: "likes") %>" class="menu__item">
              <%= t "general.most_likes" %>
            </a>
          </div>
        </div>
      </div>

      <% if Current.user %>
        <div class="card p-4">
          <%= render "account/comments/form", comment: Current.user.comments.new(commentable: @post), open: params[:comment].present? %>
        </div>
      <% end %>

      <div class="mt-4">
        <%= render "components/scroll_pagination", pagy: @pagy, content_id: "comments_list" do %>
          <%= render partial: "account/comments/comment", collection: @comments, cached: true %>
          <%= render "account/comments/status", comments: @comments %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="flex-shrink-0 w-80"></div>
</div>
