<% @page_title = @account.display_name %>

<% content_for :head do %>
  <%= auto_discovery_link_tag :atom, account_feed_url(@account, format: :atom) %>
<% end %>

<%= render 'account/header' %>

<div class="container container--medium">
  <div class="posts posts--profile">
    <% if @posts.current_page == 1 %>
      <%= render @account.posts.featured %>
    <% end %>
    <%= render partial: 'post', collection: @posts, cached: -> (post) { [post, post.saved] } %>
  </div>

  <%= paginate @posts %>
</div>
