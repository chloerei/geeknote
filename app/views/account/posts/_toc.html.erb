<%# locals: (toc:) %>

<ul class="menu p-0 w-full" data-controller="toc" data-toc-content-id-value="post-content" data-toc-active-class="menu-active">
  <li class="menu-title">
    <%= t "general.toc" %>
  </li>
  <% toc.each do |item| %>
    <li>
      <a href="#<%= item[:id] %>" data-toc-target="item">
        <%= item[:text] %>
      </a>
      <% if item[:children] %>
        <ul>
          <% item[:children].each do |child| %>
            <li>
              <a href="#<%= child[:id] %>" data-toc-target="item">
                <%= child[:text] %>
              </a>
            </li>
          <% end %>
        </ul>
      <% end %>
    </li>
  <% end %>
</ul>
