<% @page_title = @account.display_name %>

<%= render "account/header", account: @account %>

<div class="container padding-3">
  <div class="layout-primary">
    <div class="">
      <div id="collections" class="display-flex flex-direction-column gap-3">
        <%= render partial: 'collection', collection: @pagination[:page].pluck(:data), cached: true %>

        <% if @pagination[:page_info][:has_next_page] %>
          <a href="<%= url_for(after: @pagination[:page_info][:end_cursor]) %>" class="button button--text width-100 justify-content-center" id="collections__load-more" data-turbo-stream="true">
            Load more
          </a>
        <% else %>
          <div class="body-medium text-muted text-align-center padding-x-3 padding-y-2">
            No more content.
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
