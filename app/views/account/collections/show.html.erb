<div class="container container--medium">
  <div class="padding">
    <div class="breadcrumb">
      <a href="<%= account_root_path(@account) %>" class="breadcrumb__item">
        <div class="avatar avatar--small">
          <%= avatar_image_tag @account.owner.avatar %>
        </div>
        <%= @account.owner.name %>
      </a>
      <a href="<%= account_collections_path(@account) %>" class="breadcrumb__item">
        Collections
      </a>
      <span class="breadcrumb__item breadcrumb__item--active">
        <%= @collection.name %>
      </span>
    </div>
  </div>

  <div class="posts">
    <%= render partial: 'account/posts/post', collection: @posts %>
  </div>
</div>
