<div class="container">
  <div class="layout">
    <%= render 'account/navbar' %>

    <div class="main">
      <div class="card card--surface padding-3 margin-bottom-3">
        <div class="breadcrumb">
          <div class="breadcrumb__item">
            <a href="<%= account_root_path(@account) %>">
              <%= @account.owner.name %>
            </a>
          </div>
          <div class="breadcrumb__item breadcrumb__item--active">
            <%= t 'common.followers' %>
          </div>
        </div>
      </div>

      <div class="card card--surface padding-3">
        <% if @accounts.any? %>
          <div class="display-flex flex-direction-column gap-3">
            <%= render partial: 'account/follows/account', collection: @accounts %>
          </div>

          <%= paginate @accounts %>
        <% else %>
          <div class="text-align-center">
            <%= t 'common.no_followers' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
