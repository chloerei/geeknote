<div class="card card-default relative">
  <div class="card-body">
    <div class="line-clamp-3">
      <h3 class="font-medium">
        <a href="<%= account_comment_path(comment.user.account.name, comment) %>" class="flex items-center gap-2 after:absolute after:inset-0">
          <%= t "general.comment_on" %>
          <% if comment.commentable %>
            <%= comment.commentable.title %>
          <% else %>
            <span class="text-base-content/80 italic">
              <%= t "general.deleted_item" %>
            </span>
          <% end %>
        </a>
      </h3>

      <div class="text-base-content/80 mt-2">
        <%= markdown_summary comment.content %>
      </div>
    </div>

    <div class="text-base-content/80">
      <span>
        <%= format_time comment.created_at %>
      </span>
      &centerdot;
      <span>
        <%= comment.likes_count %>
        <%= t "general.likes" %>
      </span>
      &centerdot;
      <span>
        <%= comment.replies_count %>
        <%= t "general.replies" %>
      </span>
    </div>
  </div>
</div>
