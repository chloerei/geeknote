<div class="navbar px-0 gap-4">
  <div class="flex-none">
    <a href="<%= root_path %>" class="btn btn-square btn-ghost" data-controller="back-link">
      <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-arrow-left-icon lucide-arrow-left"><path d="m12 19-7-7 7-7"/><path d="M19 12H5"/></svg>
    </a>
  </div>
  <div class="flex-grow">
    <div class="text-xl font-medium">
      <%= @account.owner.name %>
    </div>
  </div>
</div>

<div class="layout-nav-main">
  <div>
    <%= render "account/nav", account: @account %>
  </div>

  <div class="">
    <div class="tabs tabs-border">
      <a href="<%= account_root_path(@account.name) %>" class="tab">
        <%= t "general.posts" %>
      </a>
      <a href="<%= account_comments_path(@account.name) %>" class="tab tab-active">
        <%= t "general.comments" %>
      </a>
    </div>

    <div class="mt-4">
      <%= render "components/scroll_pagination", pagy: @pagy, content_class: "space-y-4" do %>
        <%= render partial: "account/comments/comment_item", collection: @comments, as: :comment, cached: -> comment { [ comment.user, comment ] } %>
      <% end %>
    </div>
  </div>
</div>
