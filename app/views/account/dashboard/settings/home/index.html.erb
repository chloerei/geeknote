<div class="container">
  <div class="padding">
    <div class="breadcrumb">
      <div class="breadcrumb__item">
        <a href="<%= account_root_path(@account) %>">
          <%= @account.display_name %>
        </a>
      </div>
      <div class="breadcrumb__item">
        <a href="<%= account_dashboard_root_path(@account) %>">
          <%= t 'common.dashboard' %>
        </a>
      </div>
      <div class="breadcrumb__item breadcrumb__item--active">
        <%= t 'common.settings' %>
      </div>
    </div>
  </div>
</div>

<div class="container container--small">
  <div class="list">
    <a href="<%= account_dashboard_settings_profile_path(@account) %>" class="list__item">
      <div class="list__icon">
        <span class="material-icons">account_box</span>
      </div>
      <div class="list__content">
        <div class="text-primary">
          <%= t '.profile' %>
        </div>
        <div class="text-secondary">
          <%= t '.profile_desription' %>
        </div>
      </div>
    </a>
  </div>
</div>
