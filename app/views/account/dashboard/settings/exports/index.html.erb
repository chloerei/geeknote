<div class="container padding-3">
  <%= render 'account/dashboard/header' %>

  <div class="layout-primary">
    <%= render 'account/dashboard/navbar' %>

    <div class="">
      <div class="card card--elevated background-surface">
        <div class="top-app-bar border-bottom">
          <div class="top-app-bar__action">
            <a href="<%= account_dashboard_settings_root_path %>" class="button button--icon">
              <span class="material-icons">arrow_back</span>
            </a>
          </div>
          <div class="top-app-bar__title">
            <%= t 'common.exports' %>
          </div>
          <div class="top-app-bar__action">
            <%= form_with url: account_dashboard_settings_exports_path do %>
              <button type="submit" class="button button--text button--muted">
                <%= t 'common.create_export' %>
              </button>
            <% end %>
          </div>
        </div>

        <% if @exports.any? %>
          <div class="margin-bottom-3">
            <%= render partial: 'export', collection: @exports %>
          </div>
          <%= paginate @exports %>
        <% else %>
          <div class="padding-5 text-muted text-align-center">
            <%= t '.no_data_exported_yet' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
