<div class="container container--small padding-3">
  <div class="headline-medium display-flex align-items-center gap-2 margin-bottom-4">
    <a href="<%= account_root_path(@account) %>" class="link-title">
      <%= @account.display_name %>
    </a>
    <span class="material-icons">chevron_right</span>
    <a href="<%= account_dashboard_root_path(@account) %>" class="link-title">
      <%= t 'common.dashboard' %>
    </a>
    <span class="material-icons">chevron_right</span>
    <a href="<%= account_dashboard_settings_root_path(@account) %>" class="link-title">
      <%= t 'common.settings' %>
    </a>
    <span class="material-icons">chevron_right</span>
    <%= t 'common.account_profile' %>
  </div>
  <%= render 'account/dashboard/settings/banner_images/form' %>
  <%= render 'account/dashboard/settings/avatars/form' %>

  <%= render 'form' %>
</div>
