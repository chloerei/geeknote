<div class="toolbar">
  <div class="toolbar__action">
    <a href="<%= account_dashboard_settings_path(@account) %>" class="button button--icon">
      <span class="material-icons">arrow_back</span>
    </a>
  </div>
  <div class="toolbar__title">
    <%= t '.profile' %>
  </div>
  <div class="toolbar__action">
    <a href="<%= account_root_path(@account) %>" class="button button--text">
      <div class="button__text">
        <%= t 'common.view' %>
      </div>
    </a>
  </div>
</div>

<div class="container container--medium">
  <div class="padding">
    <%= render 'account/dashboard/settings/banner_images/form' %>
    <%= render 'account/dashboard/settings/avatars/form' %>
    <%= render 'form' %>
  </div>
</div>
