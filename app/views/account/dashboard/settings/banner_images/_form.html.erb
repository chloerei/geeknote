<div id="banner-image-form" class="margin-bottom-3">
  <label class="display-block title-medium margin-bottom-3">
    <%= t 'common.banner_image' %>
  </label>
  <div class="image-uploader">
    <div class="image-uploader__preview">
      <% if @account.owner.banner_image.attached? %>
        <%= banner_image_tag @account.owner.banner_image %>
      <% else %>
        <div class="featured-image-placeholder">
        </div>
      <% end %>
    </div>
    <div class="image-uploader__toolbar">
      <div class="image-uploader__toolbar__action">
        <%= form_with model: @account.owner, url: account_dashboard_settings_banner_image_path(@account), data: { controller: 'form' } do |form| %>
          <label class="button button--icon">
            <span class="material-icons">add_photo_alternate</span>
            <%= form.file_field :banner_image, direct_upload: true, class: 'image-uploader__input', data: { action: 'form#submit' }, accept: 'image/png, image/jpeg, image/gif' %>
          </label>
        <% end %>
      </div>
      <% if @account.owner.banner_image.attached? %>
        <div class="image-uploader__toolbar__action">
          <%= form_with url: account_dashboard_settings_banner_image_path(@account), method: :delete do |form| %>
            <button type="submit" class="button button--icon">
              <span class="material-icons">delete</span>
            </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
