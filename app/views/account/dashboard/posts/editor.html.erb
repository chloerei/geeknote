<%= form_with model: @post, url: [@account, :dashboard, @post], builder: CustomFormBuilder, html: { id: 'post-form', class: 'post-form display-flex', autocomplete: "off" }, data: { controller: "post-form", post_form_unsave_confirm_value: I18n.t('common.form_unsave_confirm') } do |form| %>
  <div class="flex-grow-1 min-width-0">
    <div class="container">
      <div class="top-app-bar align-items-center">
        <div class="top-app-bar__action">
          <a href="<%= account_dashboard_posts_path %>" class="button button--icon">
            <span class="material-icons">arrow_back</span>
          </a>
        </div>
        <div class="top-app-bar__title">
          <div class="display-flex align-items-center gap-2">
            <div class="title-medium">
              <%= t 'common.posts' %>
            </div>
          </div>
        </div>
        <div class="top-app-bar__action line-height-0">
          <label class="button-group">
            <div class="body-medium">
              Publish
            </div>
            <%= form.switch :status, {}, 'published', 'draft' %>
          </label>
        </div>
        <div class="top-app-bar__action">
          <label for="post-settings-dialog-toggle" class="button button--icon">
            <span class="material-icons">tune</span>
          </label>
        </div>
        <div class="top-app-bar__action">
          <button type="submit" name="submit" value="save" class="button button--filled">
            <%= t 'common.save' %>
          </button>
        </div>
      </div>
    </div>

    <div class="container container--post padding-3">
      <div class="card card--elevated">
        <div class="">
          <div class="image-uploader image-uploader--featured-image <%= 'image-uploader--active' if @post.featured_image.attached? %>" data-controller="image-uploader">
            <div class="image-uploader__preview" data-image-uploader-target="preview">
              <% if @post.featured_image.attached? %>
                <%= featured_image_tag @post.featured_image %>
              <% end %>
            </div>
            <div class="image-uploader__hide-on-active padding-top-3 padding-x-4">
              <label for="post_featured_image" class="button button--outlined button--muted">
                Add featured images
              </label>
            </div>
            <div class="image-uploader__show-on-active">
              <div class="image-uploader__toolbar">
                <label class="button button--icon">
                  <span class="material-icons">add_photo_alternate</span>
                  <%= form.file_field :featured_image, direct_upload: true, data: { 'image-uploader-target': 'input', action: 'image-uploader#update' } %>
                </label>
                <label class="button button--icon">
                  <span class="material-icons">close</span>
                  <input type="checkbox" name="post[remove_featured_image]" data-image-uploader-target="removeCheckbox" data-action="image-uploader#remove">
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="padding-y-3 padding-x-4">
          <div class="margin-bottom-3">
            <%= form.orignal_text_area :title, class: 'post-form__title display-small', data: { controller: 'auto-grow' }, placeholder: t('.post_title_placeholder') %>
          </div>

          <div class="margin-bottom-3">
            <div class="selector post-form__tag-selector" data-controller="selector tag-selector" data-selector-placeholder-value="Add tags..." data-selector-creatable-value="true" data-selector-max-items-value="5" data-action="selector:input->tag-selector#update">
              <select name="post[tag_list][]" class="selector__select" data-selector-target="select" multiple>
                <% @post.tags.each do |tag| %>
                  <option value="<%= tag.name %>" selected><%= tag.name %></option>
                <% end %>
              </select>
            </div>
          </div>

          <div class="margin-bottom-3">
            <%= render "components/markdown_editor" do %>
              <%= form.hidden_field :content, placeholder: t('.post_content_placeholder'), data: { markdown_editor_target: "input" } %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <input type="checkbox" id="post-settings-dialog-toggle" class="dialog-toggle">
  <div class="dialog">
    <div class="dialog__container">
      <div class="display-flex padding-3 align-items-center">
        <div class="title-medium padding-2 flex-grow-1">
          <%= t 'common.settings' %>
        </div>
        <label for="post-settings-dialog-toggle" class="button button--icon">
          <span class="material-icons">close</span>
        </label>
      </div>

      <div class="padding-x-4">
        <div class="margin-bottom-3">
          <%= form.text_field :canonical_url, helper_text: I18n.t('common.canonical_url_helper') %>
        </div>
        <div class="">
          <label class="display-flex gap-2">
            <%= form.check_box :allow_comments %>
            <div class="padding-y-2">
              Allow comments.
            </div>
          </label>
        </div>
      </div>

      <div class="display-flex padding-4 align-items-center">
        <div class="flex-grow-1"></div>
        <label for="post-settings-dialog-toggle" class="button button--text">
          Done
        </label>
      </div>
    </div>
    <label for="post-settings-dialog-toggle" class="dialog__scrim"></label>
  </div>
<% end %>
