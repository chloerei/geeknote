<%= form_with model: @post, url: account_dashboard_post_settings_path(@account, @post), builder: CustomFormBuilder, class: 'form', id: 'settings-form', data: { controller: 'form', action: 'change->form#submit' } do |form| %>
  <div class="form__field">
    <%= form.text_area :excerpt %>
  </div>
  <div class="form__field">
    <label>Tags</label>
    <div class="selector" data-controller="tag-selector" data-tag-selector-placeholder-value="add tag" data-tag-selector-creatable-value="true">
      <select name="post[tag_list][]" class="selector__select" data-tag-selector-target="select" data-action="change->form#submit" multiple>
        <% @post.tags.each do |tag| %>
          <option value="<%= tag.name %>" selected><%= tag.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form__field">
    <label class="form__control">
      <%= form.check_box :allow_comments %>
      <div class="form__control__label">
        Allow comments
      </div>
    </label>
  </div>
  <div class="form__field">
    <label class="form__control">
      <%= form.check_box :featured %>
      <div class="form__control__label">
        Feature this post
      </div>
    </label>
  </div>
<% end %>
