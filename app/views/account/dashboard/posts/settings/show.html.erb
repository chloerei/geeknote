<%= turbo_frame_tag 'settings' do %>
  <div class="toolbar">
    <div class="toolbar__title">
      Post settings
    </div>
    <div class="toolbar__action">
      <button type="button" class="button button--icon" data-action="sheet#close">
        <span class="material-icons">close</span>
      </button>
    </div>
  </div>
  <div class="padding">
    <%= render 'account/dashboard/posts/featured_images/form' %>
    <%= render 'form' %>
  </div>
  <div class="padding border-top">
    <%= form_with model: @post, url: account_dashboard_post_status_path(@account, @post), data: { "turbo-frame": "_top", "action": 'turbo:submit-end->sheet#close' } do |form| %>
      <%= form.hidden_field :status, value: 'trashed' %>
      <button type="submit" class="button button--text button--secondary">
        <div class="button__icon">
          <span class="material-icons">delete</span>
        </div>
        <div class="button__label">
          Delete post
        </div>
      </button>
    <% end %>
  </div>
<% end %>
