<%= turbo_stream.replace 'appbar' do %>
  <%= render partial: 'account/dashboard/posts/appbar' %>
<% end %>

<%= turbo_stream.update 'snackbar-container' do %>
  <div class="snackbar" data-controller="snackbar" data-snackbar-period="5000">
    Post status change to <%= Post.human_attribute_name "status.#{@post.status}" %>
    <% if @post.published? %>
      <a href="#" class="button button--text button--secondary">VIEW</a>
    <% end %>
  </div>
<% end %>
