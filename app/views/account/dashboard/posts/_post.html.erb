<tr class="position-relative">
  <td>
    <div class="subtitle-1 text-bold">
      <a href="<%= edit_account_dashboard_post_path(@account, post) %>" class="link-stretched link-styleless">
        <%= post.title.presence || t('common.untitled') %>
    </a>
    </div>
    <div class="text-secondary">
      <%= t 'common.by' %> <%= post.author_users.pluck(:name).join(', ') %>
      <% if post.tags.any? %>
        &centerdot;
        <%= post.tags.pluck(:name).join(', ') %>
      <% end %>
      &centerdot;
      <%= format_time post.updated_at %>
      <% if post.restricted? %>
        &centerdot;
        <span class="text-color-red"><%= t 'common.restricted' %></span>
      <% end %>
    </div>
  </td>
  <td class="table__cell--min">
    <div class="post-status post-status--<%= post.status %>">
      <%= Post.human_attribute_name "status.#{post.status}" %>
    </div>
  </td>
</tr>
