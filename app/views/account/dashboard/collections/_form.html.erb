<%= form_with model: @collection, url: [@account, :dashboard, @collection], builder: CustomFormBuilder, id: 'collection-form' do |form| %>
  <div class="margin-bottom-3">
    <%= form.text_field :name %>
  </div>
  <div class="margin-bottom-3">
    <%= form.text_area :description %>
  </div>
  <div class="margin-bottom-3">
    <label class="display-block title-medium margin-bottom-2">
      <%= t 'common.visibility' %>
    </label>
    <div class="form__control">
      <%= form.radio_button :visibility, :private %>
      <label for="collection_visibility_private" class="form__control__label">
        <div class="label-large">
          <%= t 'collection.visibility_private_label' %>
        </div>
        <div class="text-muted">
          <%= t 'collection.visibility_private_description' %>
        </div>
      </label>
    </div>
    <div class="form__control">
      <%= form.radio_button :visibility, :public %>
      <label for="collection_visibility_public" class="form__control__label">
        <div class="label-large">
          <%= t 'collection.visibility_public_label' %>
        </div>
        <div class="text-muted">
          <%= t 'collection.visibility_public_description' %>
        </div>
      </label>
    </div>
  </div>
  <div class="margin-bottom-3">
    <label class="display-block title-medium margin-bottom-2">
      <%= t '.new_post_add_to' %>
    </label>
    <div class="form__control">
      <%= form.radio_button :add_to, :top %>
      <label for="collection_add_to_top" class="form__control__label">
        <div class="label-large">
          <%= t 'common.collection_top' %>
        </div>
      </label>
    </div>
    <div class="form__control">
      <%= form.radio_button :add_to, :bottom %>
      <label for="collection_add_to_bottom" class="form__control__label">
        <div class="label-large">
          <%= t 'common.collection_bottom' %>
        </div>
      </label>
    </div>
  </div>
  <button type="submit" class="button button--filled">
    <% if @collection.new_record? %>
      <%= t 'common.create_collection' %>
    <% else %>
      <%= t 'common.save_changes' %>
    <% end %>
  </button>
<% end %>
