<div class="app-bar-wrapper">
  <div class="app-bar app-bar--borderless">
    <div class="toolbar">
      <div class="toolbar__action">
        <a href="<%= account_dashboard_collections_path(@account) %>" class="button button--icon">
          <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/></svg>
        </a>
      </div>
      <div class="toolbar__title">
        Collection
      </div>
      <% if current_role.in? %w(admin owner) %>
        <div class="toolbar__action">
          <a href="<%= edit_account_dashboard_collection_path(@account, @collection) %>" class="button button--text">
            <div class="button__icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M14.06 9.02l.92.92L5.92 19H5v-.92l9.06-9.06M17.66 3c-.25 0-.51.1-.7.29l-1.83 1.83 3.75 3.75 1.83-1.83c.39-.39.39-1.02 0-1.41l-2.34-2.34c-.2-.2-.45-.29-.71-.29zm-3.6 3.19L3 17.25V21h3.75L17.81 9.94l-3.75-3.75z"/></svg>
            </div>
            <div class="button__text">
              Edit
            </div>
          </a>
        </div>
        <div class="toolbar__action">
          <%= form_with url: account_dashboard_collection_path(@account, @collection), method: 'delete' do %>
          <button type="submit" class="button button--text" data-confirm="Are you sure delete this collection?">
            <div class="button__icon">
              <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#000000"><path d="M0 0h24v24H0V0z" fill="none"/><path d="M16 9v10H8V9h8m-1.5-6h-5l-1 1H5v2h14V4h-3.5l-1-1zM18 7H6v12c0 1.1.9 2 2 2h8c1.1 0 2-.9 2-2V7z"/></svg>
            </div>
            <div class="button__text">
              Delete
            </div>
          </button>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex-grow-1 overflow-auto">
    <div class="container container--small">
      <div class="padding">
        <dl class="row">
          <dt class="col-3">
            Name
          </dt>
          <dd class="col-9">
            <%= @collection.name %>
          </dd>
          <dt class="col-3">
            Description
          </dt>
          <dd class="col-9">
            <%= @collection.description %>
          </dd>
          <dt class="col-3">
            Visibility
          </dt>
          <dd class="col-9">
            <%= Collection.human_attribute_name "visibility.#{@collection.visibility}" %>
          </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
